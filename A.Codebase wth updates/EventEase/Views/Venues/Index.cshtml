@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "All Venues";
}

<h1 class="display-4 text-center mb-4">Event Venues</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New Venue</a>
</p>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" alt="Image of @item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill"></i> @Html.DisplayFor(modelItem => item.Location)</p>
                        <p class="card-text small">Capacity: **@Html.DisplayFor(modelItem => item.Capacity)** people</p>
                    </div>
                    <div class="card-footer bg-light border-top">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.VenueID" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.VenueID" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.VenueID" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>