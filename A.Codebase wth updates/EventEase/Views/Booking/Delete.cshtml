@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Delete Booking: " + Model.BookingID;
}

<h1 class="display-5 text-center mb-4 text-danger">Delete Booking: **@Model.BookingID**?</h1>
<p class="text-center lead mb-4">Are you sure you want to delete this booking permanently?</p>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4 border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Warning: This action cannot be undone!</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title mb-3">Booking Summary</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 text-muted">Booking ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BookingID)</dd>

                    <dt class="col-sm-4 text-muted">Venue</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue!.Name)</dd>

                    <dt class="col-sm-4 text-muted">Event</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Event!.Name)</dd>

                    <dt class="col-sm-4 text-muted">Start Date</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4 text-muted">End Date</dt>
                    <dd class="col-sm-8">@Model.EndDate.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4 text-muted">Booked On</dt>
                    <dd class="col-sm-8">@Model.BookingDate.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4 text-muted">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge fs-6 @(Model.Status == "Confirmed" ? "bg-success" : Model.Status == "Pending" ? "bg-warning text-dark" : "bg-danger")">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-center bg-light">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BookingID" />
                    <button type="submit" class="btn btn-danger btn-lg me-2"><i class="bi bi-trash-fill me-2"></i>Confirm Delete</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle-fill me-2"></i>Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>