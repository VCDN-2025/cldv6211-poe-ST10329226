@model EventEase.Models.Event

@{
    ViewData["Title"] = @Model.Name + " Details";
}

<h1 class="display-5 text-center mb-4">Event Details: @Model.Name</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <h3 class="card-title mb-3">@Html.DisplayFor(model => model.Name)</h3>
                <p class="card-text"><strong>Description:</strong> @Html.DisplayFor(model => model.Description)</p>
                <hr />

                <div class="row mb-2">
                    <div class="col-sm-4 text-muted"><strong>Event Type:</strong></div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.EventType.Name)</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted"><strong>Venue:</strong></div>
                    <div class="col-sm-8">@Html.DisplayFor(model => model.Venue.Name)</div>
                </div>
              
                <p class="text-muted small">Event ID: @Html.DisplayFor(model => model.EventID)</p>
            </div>
            <div class="card-footer text-center bg-light">
                <a asp-action="Edit" asp-route-id="@Model.EventID" class="btn btn-warning">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>