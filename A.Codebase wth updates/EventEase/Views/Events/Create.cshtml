@model EventEase.Models.Event

@{
    ViewData["Title"] = "Create New Event";
}

<h1 class="display-5 text-center mb-4">Create New Event</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EventTypeID" class="form-label"></label>
                    <select asp-for="EventTypeID" class="form-control" asp-items="ViewBag.EventTypeID">
                        <option value="">-- Select Event Type --</option> {{-- Optional: Allows user to not select if 0 is a valid default --}}
                    </select>
                    <span asp-validation-for="EventTypeID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="VenueID" class="form-label"></label>
                    <select asp-for="VenueID" class="form-control" asp-items="ViewBag.VenueID">
                        <option value="">-- Select Venue --</option>
                    </select>
                    <span asp-validation-for="VenueID" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Create</button>
                    <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}